{
    "name": "helhum/phpunit-library",
    "description": "PHPUnit as library in PHAR file",
    "require": {
        "phpunit/phpunit": "^4.8.0",
        "phpunit/phpunit-selenium": "^2.0.0",
        "mikey179/vfsStream": "^1.0.0"
    },
    "bin": ["bootstrap.php"],
    "config": {
        "platform": {
            "php": "5.6.0"
        },
        "preferred-install": {
            "*": "dist"
        }
    },
    "extra": {
        "phar": {
            "library": true
        }
    }
}
