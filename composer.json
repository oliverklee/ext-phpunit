{
    "name": "oliverklee/phpunit",
    "description": "Unit testing for TYPO3. Includes PHPUnit and a CLI test runner.",
    "type": "typo3-cms-extension",
    "keywords": [
        "tdd",
        "unit testing",
        "phpunit",
        "typo3"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Oliver Klee",
            "email": "typo3-coding@oliverklee.de",
            "homepage": "https://www.oliverklee.de",
            "role": "developer"
        }
    ],
    "support": {
        "issues": "https://github.com/oliverklee/ext-phpunit/issues",
        "source": "https://github.com/oliverklee/ext-phpunit"
    },
    "require": {
        "php": "^5.6.0 || ~7.0.0 || ~7.1.0 || ~7.2.0",
        "typo3/cms-core": "^8.7.9"
    },
    "require-dev": {
        "helhum/typo3-console": "^4.9"
    },
    "conflict": {
        "typo3/cms-composer-installers": "<1.4.6"
    },
    "replace": {
        "typo3-ter/phpunit": "self.version"
    },
    "autoload": {
        "classmap": [
            "Classes"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "OliverKlee\\PhpUnit\\Tests\\": "Tests/"
        }
    },
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "ci:php:lint": "find *.php Classes Configuration Migrations Scripts Tests -name '*.php' -print0 | xargs -0 -n 1 -P 4 php -l",
        "ci:tests:unit": "$RUN_TESTS_COMMAND --options=\"Tests/Unit\"",
        "ci:tests": [
            "@ci:tests:unit"
        ],
        "ci:dynamic": [
            "@ci:tests"
        ],
        "ci:static": [
            "@ci:php:lint"
        ],
        "ci": [
            "@ci:static",
            "@ci:dynamic"
        ],
        "link-extension": [
            "@php -r 'is_dir($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/\") || mkdir($extFolder, 0777, true);'",
            "@php -r 'file_exists($extFolder=__DIR__.\"/.Build/public/typo3conf/ext/phpunit\") || symlink(__DIR__,$extFolder);'"
        ],
        "post-autoload-dump": [
            "@link-extension"
        ]
    },
    "extra": {
        "branch-alias": {
            "*": "6.0.x-dev"
        },
        "typo3/class-alias-loader": {
            "class-alias-maps": [
                "Migrations/Code/ClassAliasMap.php"
            ]
        },
        "typo3/cms": {
            "extension-key": "phpunit",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        },
        "helhum/typo3-console": {
            "install-extension-dummy": "0"
        }
    }
}
